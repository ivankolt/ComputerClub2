<Window x:Class="ComputerClub.Manager.AddEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComputerClub.Manager"
        mc:Ignorable="d"
        Title="Принять сотрудника" Height="600" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Принять нового сотрудника" 
                   FontSize="22" 
                   FontWeight="Bold" 
                   Margin="20,20,20,10"
                   Foreground="#E31E24"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border BorderBrush="#E31E24" 
                    BorderThickness="1" 
                    Margin="20,10,20,10" 
                    Padding="20" 
                    CornerRadius="5">
                <StackPanel>
            
                    <TextBlock Text="Личная информация:" 
                               FontWeight="Bold" 
                               Margin="0,0,0,10"
                               Foreground="#E31E24"/>

                    <TextBlock Text="Имя:" 
                               Margin="0,5,0,5" 
                               FontWeight="SemiBold"/>
                    <TextBox x:Name="txtFirstName" 
                             Margin="0,0,0,10" 
                             Padding="5" 
                             BorderBrush="#E31E24"/>

                    <TextBlock Text="Фамилия:" 
                               Margin="0,5,0,5" 
                               FontWeight="SemiBold"/>
                    <TextBox x:Name="txtLastName" 
                             Margin="0,0,0,10" 
                             Padding="5" 
                             BorderBrush="#E31E24"/>

                    <TextBlock Text="Телефон (+7XXXXXXXXXX):" 
                               Margin="0,5,0,5" 
                               FontWeight="SemiBold"/>
                    <TextBox x:Name="txtPhoneNumber" 
                             Margin="0,0,0,10" 
                             Padding="5" 
                             BorderBrush="#E31E24"/>

                    <TextBlock Text="Пол:" 
                               Margin="0,5,0,5" 
                               FontWeight="SemiBold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <RadioButton x:Name="rbMale" 
                                     Content="Мужской" 
                                     Margin="0,0,20,0" 
                                     IsChecked="True"/>
                        <RadioButton x:Name="rbFemale" 
                                     Content="Женский"/>
                    </StackPanel>

                    <TextBlock Text="Серия паспорта (4 цифры):" 
                               Margin="0,5,0,5" 
                               FontWeight="SemiBold"/>
                    <TextBox x:Name="txtPassportSeries" 
                             Margin="0,0,0,10" 
                             Padding="5" 
                             BorderBrush="#E31E24"
                             MaxLength="4"/>

                    <TextBlock Text="Номер паспорта (6 цифр):" 
                               Margin="0,5,0,5" 
                               FontWeight="SemiBold"/>
                    <TextBox x:Name="txtPassportNumber" 
                             Margin="0,0,0,10" 
                             Padding="5" 
                             BorderBrush="#E31E24"
                             MaxLength="6"/>

                    <!-- Employment Information -->
                    <TextBlock Text="Информация о работе:" 
                               FontWeight="Bold" 
                               Margin="0,15,0,10"
                               Foreground="#E31E24"/>

                    <TextBlock Text="Должность:" 
                               Margin="0,5,0,5" 
                               FontWeight="SemiBold"/>
                    <ComboBox x:Name="cmbPosition" 
                              Margin="0,0,0,10" 
                              Padding="5" 
                              BorderBrush="#E31E24"/>

                    <TextBlock Text="Дата найма:" 
                               Margin="0,5,0,5" 
                               FontWeight="SemiBold"/>
                    <DatePicker x:Name="dpHireDate" 
                                Margin="0,0,0,10" 
                                BorderBrush="#E31E24"
                                SelectedDate="{Binding  System.DateTime.Now}"/>


                    <TextBlock Text="Информация для входа:" 
                               FontWeight="Bold" 
                               Margin="0,15,0,10"
                               Foreground="#E31E24"/>

                    <TextBlock Text="Имя пользователя:" 
                               Margin="0,5,0,5" 
                               FontWeight="SemiBold"/>
                    <TextBox x:Name="txtUsername" 
                             Margin="0,0,0,10" 
                             Padding="5" 
                             BorderBrush="#E31E24"/>

                    <TextBlock Text="Email:" 
                               Margin="0,5,0,5" 
                               FontWeight="SemiBold"/>
                    <TextBox x:Name="txtEmail" 
                             Margin="0,0,0,10" 
                             Padding="5" 
                             BorderBrush="#E31E24"/>

                    <TextBlock Text="Пароль:" 
                               Margin="0,5,0,5" 
                               FontWeight="SemiBold"/>
                    <PasswordBox x:Name="txtPassword" 
                                 Margin="0,0,0,10" 
                                 Padding="5" 
                                 BorderBrush="#E31E24"/>

                    <TextBlock Text="Номер карты (16 цифр):" 
                               Margin="0,5,0,5" 
                               FontWeight="SemiBold"/>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="txtCardNumber"
                                 Grid.Column="0"
                                 Padding="5"
                                 BorderBrush="#E31E24"
                                 MaxLength="16"/>
                        <Button x:Name="btnGenerateCard"
                                Grid.Column="1"
                                Content="Сгенерировать"
                                Click="GenerateCardNumber_Click"
                                Margin="5,0,0,0"
                                Padding="5,3"
                                Background="#E31E24"
                                Foreground="White"
                                BorderThickness="0"/>
                    </Grid>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="20,10,20,20">
            <Button Content="Принять" 
                    Click="AcceptButton_Click"
                    Padding="15,8" 
                    Margin="0,0,10,0"
                    Background="#E31E24" 
                    Foreground="White" 
                    BorderThickness="0"/>
            
            <Button Content="Отмена" 
                    Click="CancelButton_Click"
                    Padding="15,8" 
                    Margin="10,0,0,0"
                    Background="Gray" 
                    Foreground="White" 
                    BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
