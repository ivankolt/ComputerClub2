<Window x:Class="ComputerClub.Manager.UserDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComputerClub.Manager"
        mc:Ignorable="d"
        Title="Информация о пользователе" Height="450" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Информация о пользователе" 
                   FontSize="22" 
                   FontWeight="Bold" 
                   Margin="20,20,20,10"
                   Foreground="#E31E24"/>

        <Border Grid.Row="1" 
                BorderBrush="#E31E24" 
                BorderThickness="1" 
                Margin="20,10,20,10" 
                Padding="20" 
                CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Personal Information -->
                <TextBlock Text="Личная информация:" 
                           Grid.Row="0" Grid.ColumnSpan="2"
                           FontWeight="Bold" 
                           Margin="0,0,0,10"
                           Foreground="#E31E24"/>

                <TextBlock Text="Имя:" 
                           Grid.Row="1" Grid.Column="0"
                           Margin="0,5,10,5" 
                           FontWeight="SemiBold"/>
                <TextBlock x:Name="txtFirstName" 
                           Grid.Row="1" Grid.Column="1"
                           Margin="0,5,0,5"/>

                <TextBlock Text="Фамилия:" 
                           Grid.Row="2" Grid.Column="0"
                           Margin="0,5,10,5" 
                           FontWeight="SemiBold"/>
                <TextBlock x:Name="txtLastName" 
                           Grid.Row="2" Grid.Column="1"
                           Margin="0,5,0,5"/>

                <TextBlock Text="Телефон:" 
                           Grid.Row="3" Grid.Column="0"
                           Margin="0,5,10,5" 
                           FontWeight="SemiBold"/>
                <TextBlock x:Name="txtPhoneNumber" 
                           Grid.Row="3" Grid.Column="1"
                           Margin="0,5,0,5"/>

                <!-- Account Information -->
                <TextBlock Text="Информация об аккаунте:" 
                           Grid.Row="4" Grid.ColumnSpan="2"
                           FontWeight="Bold" 
                           Margin="0,15,0,10"
                           Foreground="#E31E24"/>

                <TextBlock Text="Имя пользователя:" 
                           Grid.Row="5" Grid.Column="0"
                           Margin="0,5,10,5" 
                           FontWeight="SemiBold"/>
                <TextBlock x:Name="txtUsername" 
                           Grid.Row="5" Grid.Column="1"
                           Margin="0,5,0,5"/>

                <TextBlock Text="Email:" 
                           Grid.Row="6" Grid.Column="0"
                           Margin="0,5,10,5" 
                           FontWeight="SemiBold"/>
                <TextBlock x:Name="txtEmail" 
                           Grid.Row="6" Grid.Column="1"
                           Margin="0,5,0,5"/>

                <TextBlock Text="Номер карты:" 
                           Grid.Row="7" Grid.Column="0"
                           Margin="0,5,10,5" 
                           FontWeight="SemiBold"/>
                <TextBlock x:Name="txtCardNumber" 
                           Grid.Row="7" Grid.Column="1"
                           Margin="0,5,0,5"/>

                <TextBlock Text="Баланс:" 
                           Grid.Row="8" Grid.Column="0"
                           Margin="0,5,10,5" 
                           FontWeight="SemiBold"/>
                <TextBlock x:Name="txtBalance" 
                           Grid.Row="8" Grid.Column="1"
                           Margin="0,5,0,5"/>

                <TextBlock Text="Статус:" 
                           Grid.Row="9" Grid.Column="0"
                           Margin="0,5,10,5" 
                           FontWeight="SemiBold"/>
                <TextBlock x:Name="txtStatus" 
                           Grid.Row="9" Grid.Column="1"
                           Margin="0,5,0,5"/>

                <!-- Block Information (only visible if user is blocked) -->
                <StackPanel x:Name="blockInfoPanel" 
                            Grid.Row="10" Grid.ColumnSpan="2" 
                            Visibility="Collapsed"
                            Margin="0,10,0,0">
                    <TextBlock Text="Информация о блокировке:" 
                               FontWeight="Bold" 
                               Margin="0,5,0,10"
                               Foreground="#E31E24"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="Причина:" 
                                   Grid.Row="0" Grid.Column="0"
                                   Margin="0,5,10,5" 
                                   FontWeight="SemiBold"/>
                        <TextBlock x:Name="txtBlockReason" 
                                   Grid.Row="0" Grid.Column="1"
                                   Margin="0,5,0,5"
                                   TextWrapping="Wrap"/>
                        
                        <TextBlock Text="Дата блокировки:" 
                                   Grid.Row="1" Grid.Column="0"
                                   Margin="0,5,10,5" 
                                   FontWeight="SemiBold"/>
                        <TextBlock x:Name="txtBlockDate" 
                                   Grid.Row="1" Grid.Column="1"
                                   Margin="0,5,0,5"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>

        <Button Content="Закрыть" 
                Grid.Row="2"
                Click="CloseButton_Click"
                Padding="15,8" 
                Margin="20,10,20,20"
                Background="#E31E24" 
                Foreground="White" 
                BorderThickness="0"
                HorizontalAlignment="Center"/>
    </Grid>
</Window>
