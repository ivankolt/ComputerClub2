<UserControl x:Class="ComputerClub.Manager.AddPCControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ComputerClub.Manager"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Управление ПК" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="20,20,20,10"
                   Foreground="#E31E24"
                   Grid.ColumnSpan="2"/>

        <Border Grid.Row="1" 
                Grid.Column="0"
                BorderBrush="#E31E24" 
                BorderThickness="1" 
                Margin="20,10,10,20" 
                Padding="20" 
                CornerRadius="5">
            <StackPanel>
                <TextBlock Text="Добавление нового ПК" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Margin="0,0,0,15"
                           Foreground="#E31E24"/>
                
                <TextBlock Text="Цена за час:" 
                           Margin="0,0,0,5" 
                           FontWeight="SemiBold"/>
                <TextBox x:Name="txtPricePerHour" 
                         Margin="0,0,0,15" 
                         Padding="5" 
                         BorderBrush="#E31E24"/>

                <TextBlock Text="Зона:" 
                           Margin="0,0,0,5" 
                           FontWeight="SemiBold"/>
                <ComboBox x:Name="cmbZone" 
                          Margin="0,0,0,15" 
                          Padding="5" 
                          BorderBrush="#E31E24"/>

                <TextBlock Text="Оборудование:" 
                           Margin="0,0,0,5" 
                           FontWeight="SemiBold"/>
                <ComboBox x:Name="cmbEquipment" 
                          Margin="0,0,0,25" 
                          Padding="5" 
                          BorderBrush="#E31E24"/>

                <Button x:Name="btnAddPC" 
                        Content="Добавить ПК" 
                        Click="btnAddPC_Click" 
                        Padding="10,5" 
                        Background="#E31E24" 
                        Foreground="White" 
                        BorderThickness="0" 
                        HorizontalAlignment="Center" FontWeight="Bold"/>
            </StackPanel>
        </Border>
        
        <Border Grid.Row="1" 
                Grid.Column="1"
                BorderBrush="#E31E24" 
                BorderThickness="1" 
                Margin="10,10,20,20" 
                Padding="20" 
                CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Text="Удаление ПК" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Margin="0,0,0,15"
                           Foreground="#E31E24"/>

                <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto">
                 <DataGrid x:Name="dgPCs" 
                     AutoGenerateColumns="False"
                     CanUserAddRows="False"
                     IsReadOnly="True"
                     Margin="0 20 0 0"
                     RowHeight="35"
                     FontSize="14"
                     AlternatingRowBackground="#FFE6E6E6"
                     Background="White"
                     BorderBrush="#FFC0C0C0"
                     BorderThickness="1"
                     GridLinesVisibility="All"
                     HorizontalGridLinesBrush="#FFC0C0C0"
                     VerticalGridLinesBrush="#FFC0C0C0">

                        <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Background" Value="#FFCE0000"/>

                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Padding" Value="5"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="FontWeight" Value="Normal"/>
                            <Setter Property="Padding" Value="5"/>

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFE6E6E6"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#FFCE0000"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="30"/>
                        <DataGridTextColumn Header="Зона" Binding="{Binding Zone}" Width="100"/>
                        <DataGridTextColumn Header="Цена/час" Binding="{Binding PricePerHour}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
             
                </ScrollViewer>

                <Button x:Name="btnDeletePC" 
                        Grid.Row="2"
                        Content="Удалить выбранный ПК" 
                        Click="btnDeletePC_Click" 
                        Padding="10,5" 
                        Background="#E31E24" 
                        Foreground="White" 
                        BorderThickness="0" 
                        HorizontalAlignment="Center" FontWeight="Bold"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
