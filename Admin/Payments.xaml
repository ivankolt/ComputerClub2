<Window x:Class="ComputerClub.Admin.Payments"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="История платежей"
        WindowStartupLocation="CenterScreen"
        Height="450" Width="950">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="0" Margin="0 0 0 10">
            <Button 
                x:Name="GenerateReportButton"
                Content="Сформировать отчёт"
                Width="150"
                Height="30"
                FontSize="14"
                Background="#FFCE0000"
                Foreground="White"
                BorderBrush="#FFA80000"
                Click="GenerateReportButton_Click" FontWeight="Bold"/>
        </StackPanel>
        <DataGrid Grid.Row="1"
            x:Name="PaymentsHistoryGrid"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            IsReadOnly="True"
            Margin="0 20 0 0"
            RowHeight="35"
            FontSize="14"
            AlternatingRowBackground="#FFE6E6E6"
            Background="White"
            BorderBrush="#FFC0C0C0"
            BorderThickness="1"
            GridLinesVisibility="All"
            HorizontalGridLinesBrush="#FFC0C0C0"
            VerticalGridLinesBrush="#FFC0C0C0"
            MouseDoubleClick="PaymentsHistoryGrid_MouseDoubleClick">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Background" Value="#FFCE0000"/>
  
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Padding" Value="5"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="FontWeight" Value="Normal"/>
                    <Setter Property="Padding" Value="5"/>

                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FFE6E6E6"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#FFCE0000"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTextColumn
                    Header="ID Платежа"
                    Binding="{Binding Id}"
                    Width="Auto"/>
                <DataGridTextColumn
                    Header="Пользователь"
                    Binding="{Binding Username}"
                    Width="1.5*"/>
                <DataGridTextColumn
                    Header="Сумма"
                    Binding="{Binding Amount}" 
                    Width="*"/>
                    <DataGridTextColumn
                    Header="Тип"
                    Binding="{Binding TypePayment}"
                    Width="*"/>
                    <DataGridTextColumn
                    Header="Дата платежа"
                    Binding="{Binding DatePayment, StringFormat={}{0:dd.MM.yyyy HH:mm}}"
                    Width="1.8*"/>
                    <DataGridTextColumn
                    Header="Услуга/Товар"
                    Binding="{Binding ServiceName}"
                    Width="1.5*"/>
                    <DataGridTextColumn
                    Header="Номер счета"
                    Binding="{Binding AccountNumber}"
                    Width="2*"/>
                    <DataGridTextColumn
                    Header="ID Пользователя"
                    Binding="{Binding UserId}"
                    Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>