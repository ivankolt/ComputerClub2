<UserControl x:Class="ComputerClub.Admin.Shope"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ComputerClub.Admin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10,10,180,10">
            <ItemsControl x:Name="ProductsList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border 
                            Background="#FFCE0000" 
                            Width="400" 
                            Height="150" 
                            CornerRadius="10" 
                            Margin="10">
                            <Grid>
                                <!-- Фиксированная ширина для колонки с изображением -->
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100" />
                                    <!-- Фиксировано -->
                                    <ColumnDefinition Width="*" />
                                    <!-- Остальное пространство -->
                                </Grid.ColumnDefinitions>

                                <!-- Изображение -->
                                <Image 
                                    Grid.Column="0" 
                                    Source="{Binding FullImagePath}" 
                                    Width="100" 
                                    Height="100" 
                                    Stretch="UniformToFill" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center" 
                                    Margin="5" />

                                <!-- Текстовая информация -->
                                <StackPanel 
                                    Grid.Column="1" 
                                    Orientation="Vertical" 
                                    Margin="10 0 10 0">
                                    <TextBlock 
                                        Text="{Binding ProductName}" 
                                        FontWeight="Bold" 
                                        FontSize="16" 
                                        TextWrapping="Wrap" 
                                        MaxWidth="250" 
                                        Margin="0 0 0 5"/>
                                    <TextBlock 
                                        Text="{Binding Price}" 
                                        FontSize="14"/>
                                    <TextBlock 
                                        Text="{Binding Category}" 
                                        FontSize="14"/>
                                    <TextBlock 
                                        Text="{Binding QuantityStore}" 
                                        FontSize="12"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <StackPanel 
            Orientation="Vertical" 
            HorizontalAlignment="Right" 
            Margin="0,0,20,0" 
            VerticalAlignment="Bottom">
            <!-- Кнопки с унифицированными отступами -->
            <Button 
                Content="Обновить список" 
                Width="150" Height="30" 
                Background="#FFCE0000" 
                Foreground="White" 
                Click="UpdateProducts_Click" 
                Margin="0 0 0 10" 
                FontWeight="Bold" 
                FontSize="10"/>
            <Button 
                Content="Добавить товар" 
                Width="150" Height="30" 
                Background="#FFCE0000" 
                Foreground="White" 
                Click="AddProduct_Click" 
                Margin="0 0 0 10" 
                FontWeight="Bold" 
                FontSize="10"/>
            <Button 
                Content="Получить товары" 
                Width="150" Height="30" 
                Background="#FFCE0000" 
                Foreground="White" 
                Click="FetchProducts_Click" 
                Margin="0 0 0 10" 
                FontWeight="Bold" 
                FontSize="10"/>
            <Button 
                Content="История заказов" 
                Width="150" Height="30" 
                Background="#FFCE0000" 
                Foreground="White" 
                Click="ShowOrderHistory_Click" 
                Margin="0" 
                FontWeight="Bold" 
                FontSize="10"/>
        </StackPanel>
    </Grid>
</UserControl>