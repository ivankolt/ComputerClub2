<Window x:Class="ComputerClub.Admin.EditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComputerClub.Admin"
        mc:Ignorable="d"
        Title="Изменение товара" Height="450" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Изменение товара" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"
                   Foreground="#FFCE0000"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Название товара:" 
                           Margin="0,0,0,5" 
                           FontWeight="SemiBold"/>
                <TextBox x:Name="txtProductName" 
                         Margin="0,0,0,15" 
                         Padding="5"/>

                <TextBlock Text="Цена:" 
                           Margin="0,0,0,5" 
                           FontWeight="SemiBold"/>
                <TextBox x:Name="txtPrice" 
                         Margin="0,0,0,15" 
                         Padding="5"/>

                <TextBlock Text="Текущее изображение:" 
                           Margin="0,0,0,5" 
                           FontWeight="SemiBold"/>
                <TextBlock x:Name="txtCurrentImage" 
                           Margin="0,0,0,5"/>

                <Image x:Name="imgProduct" 
                       Height="150" 
                       Stretch="Uniform" 
                       Margin="0,0,0,10"
                       HorizontalAlignment="Left"/>

                <Button Content="Выбрать новое изображение" 
                        Click="BrowseImage_Click"
                        Padding="10,5" 
                        Margin="0,0,0,20"
                        Background="#FFCE0000" 
                        Foreground="White" 
                        HorizontalAlignment="Left"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Отмена" 
                    Click="CancelButton_Click"
                    Padding="15,8" 
                    Margin="0,0,10,0"
                    Background="LightGray"/>
            <Button Content="Сохранить" 
                    Click="SaveButton_Click"
                    Padding="15,8" 
                    Background="#FFCE0000" 
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
