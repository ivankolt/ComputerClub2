<Window x:Class="ComputerClub.Admin.OrderHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="История поступления товаров" Height="450" Width="800">
    <Grid Margin="10">
        <DataGrid 
            x:Name="OrderHistoryGrid" 
            AutoGenerateColumns="False" 
            CanUserAddRows="False" 
            IsReadOnly="True" 
            Margin="0 20 0 0"
            RowHeight="35" 
            FontSize="14" 
            AlternatingRowBackground="#FFE6E6E6" 
            Background="White" 
            BorderBrush="#FFC0C0C0" 
            BorderThickness="1" 
            GridLinesVisibility="All" 
            HorizontalGridLinesBrush="#FFC0C0C0" 
            VerticalGridLinesBrush="#FFC0C0C0">

            <!-- Стиль заголовков -->
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Background" Value="#FFCE0000"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Padding" Value="5"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <!-- Стиль строк -->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="FontWeight" Value="Normal"/>
                    <Setter Property="Padding" Value="5"/>
                    <Setter Property="Cursor" Value="Hand"/>

                    <!-- Фон при наведении -->
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FFE6E6E6"/>
                        </Trigger>
                        <!-- Выделение строки -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#FFCE0000"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <!-- Колонки -->
            <DataGrid.Columns>
                <DataGridTextColumn 
                    Header="ID" 
                    Binding="{Binding id}" 
                    Width="*"/>
                <DataGridTextColumn 
                    Header="Дата получения" 
                    Binding="{Binding date_receipt, StringFormat={}{0:dd/MM/yyyy HH:mm}}" 
                    Width="2*"/>
                <DataGridTextColumn 
                    Header="Количество" 
                    Binding="{Binding received_count}" 
                    Width="*"/>
                <DataGridTextColumn 
                    Header="Название товара" 
                    Binding="{Binding product_name}" 
                    Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>